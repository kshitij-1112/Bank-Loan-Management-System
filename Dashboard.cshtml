@model IEnumerable<CustomerManagement.Models.Entities.Customer>

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1>Customer Management Dashboard</h1>
    <p>Manage customer registrations and KYC verification</p>
</div>

<!-- Table Container -->
<div class="table-container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ğŸ‘¤ Full Name</th>
                <th>âœ‰ï¸ Email</th>
                <th>ğŸ“ Phone</th>
                <th>ğŸ“„ Identity Proof</th>
                <th>ğŸ“ Address</th>
                <th>ğŸªª Identity Type</th>
                <th>âœ… KYC Status</th>
                <th>âš™ï¸ Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td><strong>@customer.FullName</strong></td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a href="@customer.DocumentPath" target="_blank" class="document-link">View Document</a>
                    </td>
                    <td>@customer.Address</td>
                    <td>@customer.IdentityType</td>
                    <td>
                        @if (customer.KycStatus == "Approved" || customer.KycStatus == "Verified")
                        {
                            <span class="status-badge status-verified">âœ… @customer.KycStatus</span>
                        }
                        else
                        {
                            <span class="status-badge status-pending">â° @customer.KycStatus</span>
                        }
                    </td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn btn-warning btn-action" onclick="openEditModal(@customer.Id)">
                                âœï¸ Edit
                            </button>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@customer.Id" />
                                <button type="submit" class="btn btn-danger btn-action" 
                                        onclick="return confirm('Are you sure you want to delete this customer?');">
                                    ğŸ—‘ï¸ Delete
                                </button>
                            </form>
                            <form asp-action="Verify" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@customer.Id" />
                                <button type="submit" class="btn btn-success btn-action">
                                    âœ… Verify
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editModalBody">
                <!-- Form will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id) {
            $.get('/Admin/Edit/' + id, function (data) {
                $('#editModalBody').html(data);
                $('#editModal').modal('show');
            });
        }
    </script>
}
